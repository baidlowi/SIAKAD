<div class="efb-event collapsed" id="efb-event-enrolment">
    <h4 class="efb-event-label btn-primary" data-event="enrolment">
        {{name}}
        <i class="fa fa-plus"></i>
        <i class="fa fa-minus"></i>
    </h4>
    <div class="efb-event-settings">
        <div class="efb-event-settings" style="height: 114px;">
            <div class="form-group row  fitem">
                <div class="col-md-3">
                    <label class="col-form-label d-inline " for="id_enrolment-courses">
                        {{#str}} courses, moodle {{/str}}
                    </label>
                </div>
                <div class="col-md-9 form-inline felement" data-fieldtype="select">
                    <select class="form-control" name="enrolment-courses[]" id="id_enrolment-courses" multiple="" size="">
                        {{#courses}}
                            <option value="{{.}}">{{#str}} courses, moodle {{/str}} {{.}}</option>
                        {{/courses}}
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>